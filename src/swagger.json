{
  "openapi": "3.0.0",
  "info": {
    "title": "JDG E-commerce - Docs",
    "description": "Documentação da api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "Local environment server"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all",
        "description": "Retorna todos os produtos cadastrados",
        "responses": {
          "200": {
            "description": "Retorna todos os produtos cadastrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "price": {
                        "type": "integer"
                      },
                      "images": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "amount": {
                        "type": "integer"
                      },
                      "discount": {
                        "type": "integer"
                      },
                      "category": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "createdAt": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "tags": ["Products"],
        "summary": "Find by id",
        "description": "Retorna produto cadastrado",
        "responses": {
          "200": {
            "description": "Retorna o produto cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "price": {
                      "type": "integer"
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "amount": {
                      "type": "integer"
                    },
                    "discount": {
                      "type": "integer"
                    },
                    "category": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "createdAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/": {
      "post": {
        "tags": ["Products"],
        "summary": "Create product",
        "description": "Cadastra um produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "price": {
                    "type": "integer"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "amount": {
                    "type": "integer"
                  },
                  "discount": {
                    "type": "integer"
                  },
                  "category": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "createdAt": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "No body"
          }
        }
      }
    },
    "/products/images/:productId": {
      "post": {
        "tags": ["Products"],
        "summary": "Image Upload Product",
        "description": "Realiza o upload de imagens para um produto",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/products/:id": {
      "delete": {
        "tags": ["Products"],
        "summary": "Delete a single product",
        "description": "Deleta um único produto baseado no ID da URl",
        "responses": {
          "204": {
            "description": "No body"
          }
        }
      }
    },
    "/edit/:id": {
      "patch": {
        "tags": ["Products"],
        "summary": "Edit a single product",
        "description": "Edita um único produto baseado no ID da URl",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "price": {
                    "type": "integer"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "amount": {
                    "type": "integer"
                  },
                  "discount": {
                    "type": "integer"
                  },
                  "category": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "createdAt": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/products/with-reviews/{productId}": {
      "get": {
        "tags": ["Reviews"],
        "summary": "Get all products with reviews",
        "description": "Retorna todos os produtos cadastrados com suas respectivas reviews",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "ID do produto",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna todos os produtos cadastrados com suas respectivas reviews",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "price": {
                        "type": "integer"
                      },
                      "images": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "amount": {
                        "type": "integer"
                      },
                      "discount": {
                        "type": "integer"
                      },
                      "category": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "createdAt": {
                        "type": "string"
                      },
                      "reviews": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "name": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "rating": {
                              "type": "integer"
                            },
                            "createdAt": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}/reviews": {
      "post": {
        "tags": ["Reviews"],
        "summary": "Create a review for a product",
        "description": "Cria uma avaliação para um produto específico",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "ID do produto",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "rating": {
                    "type": "integer",
                    "description": "Avaliação do produto (1 a 5)"
                  },
                  "comment": {
                    "type": "string",
                    "description": "Comentário sobre o produto"
                  }
                },
                "required": ["rating"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Avaliação criada com sucesso"
          },
          "400": {
            "description": "Requisição inválida. Certifique-se de fornecer uma avaliação válida."
          },
          "404": {
            "description": "Produto não encontrado. Certifique-se de fornecer um ID de produto válido."
          }
        }
      }
    },
    "/users/register/": {
      "post": {
        "tags": ["Users"],
        "summary": "Register a user",
        "description": "Endpoint para o registro de novos usuários no site",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "required": true
                  },
                  "password": {
                    "type": "string",
                    "required": true
                  },
                  "puchaseHistory": [
                    {
                      "purchaseDate": {
                        "type": "string"
                      },
                      "item": [
                        {
                          "productId": { "type": "string" },
                          "productName": { "type": "string" },
                          "quantity": { "type": "integer" },
                          "price": { "type": "integer" }
                        }
                      ],
                      "totalAmount": { "type": "integer" }
                    }
                  ],
                  "profilePhoto": { "type": "string" },
                  "created_at": { "type": "Date" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    }
  }
}
